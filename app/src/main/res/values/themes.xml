<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MinTicAplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primario</item>
        <item name="colorPrimaryVariant">@color/varianteprimaria</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundario</item>
        <item name="colorSecondaryVariant">@color/varianteSecundaria</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
        
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MinTicAplication.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MinTicAplication.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MinTicAplication.LargeComponent</item>
    </style>

    <!-- estilo para no presentar tool bar -->
    <style name="Theme.MinTicAplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MinTicAplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MinTicAplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    
    <!-- Definicion propiedades personalizadas para los estilos -->
    <style name="ShapeAppearance.MinTicAplication.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cornerSizeSmallComponent</item>
    </style>

    <style name="textPrimary.MinTicAplication" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:textColor">@color/primario</item>

    </style>

    <style name="ShapeAppearance.MinTicAplication.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cornerSizeMediumComponent</item>
    </style>

    <style name="ShapeAppearance.MinTicAplication.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cornerSizeLargeComponent</item>
    </style>


    <style name="round_image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- apariencia para el Titulo del banner home activity-->
    <style name="Title.Mintic" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/primario</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="subTitle.Mintic." parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/textoSecundarop   </item>
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="serviceList.Mintic." parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/textoPrimario</item>
        <item name="android:textSize">@dimen/button_text_size</item>

    </style>


</resources>