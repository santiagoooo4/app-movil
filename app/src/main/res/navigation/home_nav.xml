<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.minticaplication.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_espcialistFragment"
            app:destination="@id/specialistFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.minticaplication.LocationFragment"
        android:label="@string/location_label"
        tools:layout="@layout/fragment_location" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.minticaplication.ProfileFragment"
        android:label="@string/profile_label"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/specialistFragment"
        android:name="com.example.minticaplication.EspcialistFragment"
        android:label="@string/specialist_tittle"
        tools:layout="@layout/fragment_espcialist">
        <argument
            android:name="name"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="description"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="search"
            android:defaultValue="true"
            app:argType="boolean" />
    </fragment>
</navigation>