<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@drawable/backgroundgreentheme">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_fragment_image"
        android:layout_width="@dimen/banner_size"
        android:layout_height="@dimen/banner_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/big_margin"
        android:src="@drawable/profile"
        app:strokeWidth="@dimen/stroke"
        app:strokeColor="@color/grey"
        app:shapeAppearance="@style/round_image"
        android:scaleType="centerCrop"

        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/default_margin"
        tools:text="Nombre Apellido"
        style="@style/textPrmary.MinTicAplication"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/default_margin"
        tools:text="exampleEmail@algo.com"
        style="@style/textPrmary.MinTicAplication"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_bottom_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/big_margin"
        android:text="@string/profile_fragment_button_out"
        android:textColor="@color/white">
    </com.google.android.material.button.MaterialButton>

<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/profile_bottom_camara"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="@id/profile_fragment_image"
    app:layout_constraintBottom_toBottomOf="@id/profile_fragment_image"
    app:srcCompat="@drawable/ic_baseline_camera_alt_24"
    android:backgroundTint="@color/varianteprimaria"/>


</androidx.constraintlayout.widget.ConstraintLayout>